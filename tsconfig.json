{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tsbuildinfo",
    "plugins": [
      { "name": "typescript-plugin-toml" }
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "paths": {
      "/@/*": [
        "src/*"
      ]
    }
  }
}
